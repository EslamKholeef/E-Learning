@model IEnumerable<DistanceLearning.Models.CourseModel>
<link href="~/Content/src/css/jquery.dataTables.min.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<script src="~/Content/src/js/jquery-3.5.1.min.js"></script>
<script src="~/Content/src/js/jquery.dataTables.min.js"></script>

<table id="myTable" class="display">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainPublisher.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseLogo)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MainPublisher.UserName)
            </td>
            <td>
                <img src="~/Content/CourseLogos/@Html.DisplayFor(Model => item.CourseLogo)" height="64" width="64" class="img-thumbnail" />
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
        }


    </tbody>
</table>

<script>

        $(document).ready(function () {
            $('#myTable').DataTable();
        });
</script>